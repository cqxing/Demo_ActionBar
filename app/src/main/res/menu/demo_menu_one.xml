<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yourapp="http://schemas.android.com/apk/res-auto">
    <!-- Search, should appear as action button -->
    <item
        android:id="@+id/action_search"
        android:icon="@mipmap/ic_launcher"
        android:title="查找"
        yourapp:actionViewClass="android.support.v7.widget.SearchView"
        yourapp:showAsAction="ifRoom|collapseActionView" />
    <item
        android:id="@+id/action_burning"
        android:icon="@mipmap/burning"
        android:title="郭敏"
        yourapp:showAsAction="ifRoom" />
    <item
        android:id="@+id/action_guomin"
        android:icon="@mipmap/guomin"
        android:title="我爱你"
        yourapp:showAsAction="always|withText" />
    <!-- Settings, should always be in the overflow -->
    <item
        android:id="@+id/action_share"
        android:title="分享"
        yourapp:actionProviderClass="android.support.v7.widget.ShareActionProvider"
        yourapp:showAsAction="ifRoom" />

    <item
        android:id="@+id/action_settings"
        android:title="设置"
        yourapp:showAsAction="never" />
    <item
        android:id="@+id/action_settings_one"
        android:title="设置one" />
    <item
        android:id="@+id/action_settings_two"
        android:title="设置two" />
    <item
        android:id="@+id/action_settings_three"
        android:title="设置three" />
